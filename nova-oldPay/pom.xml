<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>nova</artifactId>
        <groupId>com.nova</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>nova-pay</artifactId>

    <properties>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>

        <alipay.version>4.31.12.ALL</alipay.version>
        <wxpay.v2.version>0.0.3</wxpay.v2.version>
        <wxpay.v3.version>0.4.7</wxpay.v3.version>
        <yeepay.version>3.2.25</yeepay.version>
        <ocr.version>1.1.7</ocr.version>

    </properties>

    <dependencies>
        <!-- 支付宝sdk -->
        <dependency>
            <groupId>com.alipay.sdk</groupId>
            <artifactId>alipay-sdk-java</artifactId>
            <version>${alipay.version}</version>
        </dependency>

        <!-- 微信sdk v2-->
        <dependency>
            <groupId>com.github.wxpay</groupId>
            <artifactId>wxpay-sdk</artifactId>
            <version>${wxpay.v2.version}</version>
        </dependency>

        <!-- 微信sdk v3-->
        <dependency>
            <groupId>com.github.wechatpay-apiv3</groupId>
            <artifactId>wechatpay-apache-httpclient</artifactId>
            <version>${wxpay.v3.version}</version>
        </dependency>

        <!-- 易宝业务sdk -->
        <dependency>
            <groupId>com.nft.pay</groupId>
            <artifactId>yop-java-sdk</artifactId>
            <version>${yeepay.version}</version>
            <scope>system</scope>
            <systemPath>${basedir}/src/main/resources/lib/yop-java-sdk-3.2.25-jdk18json.jar</systemPath>
        </dependency>

        <!-- 阿里云 ocr身份证识别 -->
        <dependency>
            <groupId>com.aliyun</groupId>
            <artifactId>ocr_api20210707</artifactId>
            <version>${ocr.version}</version>
        </dependency>

        <dependency>
            <groupId>com.nova</groupId>
            <artifactId>nova-common</artifactId>
        </dependency>

        <dependency>
            <groupId>com.nova</groupId>
            <artifactId>nova-framework</artifactId>
        </dependency>
    </dependencies>
</project>